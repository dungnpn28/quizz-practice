<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UserAuthorizationFilter</filter-name>
        <filter-class>controller.UserAuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserAuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LogInController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailResetPasswordController</servlet-name>
        <servlet-class>controller.EmailResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>controller.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>controller.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByExamNameController</servlet-name>
        <servlet-class>controller.SearchByExamNameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBySubjectController</servlet-name>
        <servlet-class>controller.SearchBySubjectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SimulationExamController</servlet-name>
        <servlet-class>controller.SimulationExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAuthorization</servlet-name>
        <servlet-class>controller.UserAuthorizationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogListController</servlet-name>
        <servlet-class>controller.BlogListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusHomeController</servlet-name>
        <servlet-class>controller.CusHomeController</servlet-class>
        <servlet-name>ChangeUserProfileController</servlet-name>
        <servlet-class>controller.ChangeUserProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailResetPasswordController</servlet-name>
        <url-pattern>/emailresetpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/resetpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByExamNameController</servlet-name>
        <url-pattern>/searchByExamName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBySubjectController</servlet-name>
        <url-pattern>/searchBySubject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimulationExamController</servlet-name>
        <url-pattern>/simulationExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAuthorization</servlet-name>
        <url-pattern>/userauthorization</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogListController</servlet-name>
        <url-pattern>/BlogListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusHomeController</servlet-name>
        <url-pattern>/cusHome</url-pattern>
        <servlet-name>ChangeUserProfileController</servlet-name>
        <url-pattern>/changeUserProfile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
